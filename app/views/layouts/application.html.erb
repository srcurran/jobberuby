<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:title) %> - Jobberuby</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% unless yield(:title).empty? %>
      <%= yield(:title) %>
    <% end %>
    <%= yield %>
  </body>
</html>
